#!/usr/bin/env bash

export USERNAME=$(whoami)
echo "Starting Docker container for DTCC Builder for user" $USERNAME

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
docker start dtcc-builder-$USERNAME
echo ""
cat ${SCRIPT_DIR}/../Welcome
echo ""
echo "You may use CTRL-D to exit. To restart the container, use the commands"
echo ""
echo "  docker start dtcc-builder"
echo "  docker attach dtcc-builder"
echo ""

docker attach dtcc-builder-$USERNAME
